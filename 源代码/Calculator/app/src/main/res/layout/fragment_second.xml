<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:maxHeight="150dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/input_unit_textView"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:text="美元\nUSD"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/input_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=">"
            android:textColor="#bbb"
            android:textSize="75sp"
            android:paddingLeft="20dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/input_unit_textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/input_textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:padding="20dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/input_select"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/output_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:maxHeight="150dp"
        app:layout_constraintTop_toBottomOf="@+id/input_view">

        <TextView
            android:id="@+id/output_unit_textView"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="人民币\nCNY"
            android:textSize="20sp"
            android:paddingLeft="18dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/output_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=">"
            android:textColor="#bbb"
            android:textSize="75sp"
            android:paddingLeft="20dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/output_unit_textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/output_textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:padding="20dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/output_select"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/hint_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#bbb"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/keyboard_fragment_two" />

    <GridLayout
        android:id="@+id/keyboard_fragment_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_seven_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" />

        <Button
            android:id="@+id/btn_eight_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8" />

        <Button
            android:id="@+id/btn_nine_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9" />

        <Button
            android:id="@+id/btn_clearAll_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical" />

        <Button
            android:id="@+id/btn_four_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button
            android:id="@+id/btn_five_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />

        <Button
            android:id="@+id/btn_six_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6" />

        <Button
            android:id="@+id/btn_one_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/btn_two_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <Button
            android:id="@+id/btn_three_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

        <Button
            android:id="@+id/btn_clearTail_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical" />

        <Button
            android:id="@+id/btn_doubleZero_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00" />

        <Button
            android:id="@+id/btn_zero_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/btn_point_fragment_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>