<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/keyboard">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:textAlignment="textEnd"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/screen"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="8"
        android:rowCount="4"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_sin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickSin"
            android:text="sin" />

        <Button
            android:id="@+id/btn_factorial"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickFactorial"
            android:text="!" />

        <Button
            android:id="@+id/btn_leftParentheses"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickLeftParentheses"
            android:text="(" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickDivide"
            android:text="@string/divide" />

        <Button
            android:id="@+id/btn_seven"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickSeven"
            android:text="7" />

        <Button
            android:id="@+id/btn_eight"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickEight"
            android:text="8" />

        <Button
            android:id="@+id/btn_nine"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickNine"
            android:text="9" />

        <Button
            android:id="@+id/btn_clearAll"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickClearAll"
            android:text="C" />

        <Button
            android:id="@+id/btn_cos"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickCos"
            android:text="cos" />

        <Button
            android:id="@+id/btn_PI"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickPI"
            android:text="@string/PI" />

        <Button
            android:id="@+id/btn_rightParentheses"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickRightParentheses"
            android:text=")" />

        <Button
            android:id="@+id/btn_multi"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickMulti"
            android:text="@string/multi" />

        <Button
            android:id="@+id/btn_four"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickFour"
            android:text="4" />

        <Button
            android:id="@+id/btn_five"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickFive"
            android:text="5" />

        <Button
            android:id="@+id/btn_six"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickSix"
            android:text="6" />

        <Button
            android:id="@+id/btn_clearTail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickClearTail"
            android:text="X" />

        <Button
            android:id="@+id/btn_tan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickTan"
            android:text="tan" />

        <Button
            android:id="@+id/btn_e"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickE"
            android:text="e" />

        <Button
            android:id="@+id/btn_radical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickRadical"
            android:text="@string/radical" />

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickSub"
            android:text="-" />

        <Button
            android:id="@+id/btn_one"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickOne"
            android:text="1" />

        <Button
            android:id="@+id/btn_two"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickTwo"
            android:text="2" />

        <Button
            android:id="@+id/btn_three"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickThree"
            android:text="3" />

        <Button
            android:id="@+id/btn_remainder"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickPercent"
            android:text="%" />

        <Button
            android:id="@+id/btn_log"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickLog"
            android:text="log" />

        <Button
            android:id="@+id/btn_ln"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickLn"
            android:text="ln" />

        <Button
            android:id="@+id/btn_power"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickPower"
            android:text="^" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickAdd"
            android:text="+" />

        <Button
            android:id="@+id/btn_doubleZero"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickDoubleZero"
            android:text="00" />

        <Button
            android:id="@+id/btn_zero"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickZero"
            android:text="0" />

        <Button
            android:id="@+id/btn_point"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickPoint"
            android:text="." />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClickEqual"
            android:text="=" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>